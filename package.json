{
  "name": "tasklens",
  "version": "1.0.0",
  "description": "I/O system details tracker & analyzer",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akibhaider/TaskLens.git"
  },
  "keywords": [
    "I/O tracker",
    "System monitor",
    "TaskLens"
  ],
  "author": "Akib",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akibhaider/TaskLens/issues"
  },
  "homepage": "https://github.com/akibhaider/TaskLens#readme",
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron-forge/publisher-github": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^33.3.1"
  },
  "dependencies": {
    "electron-builder": "^25.1.8",
    "electron-squirrel-startup": "^1.0.1",
    "systeminformation": "^5.25.11",
    "update-electron-app": "^3.1.0"
  },
  "build": {
    "appId": "com.akib.tasklens",
    "productName": "TaskLens",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "publisherName": "Akib"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/installer-icon.ico",
      "uninstallerIcon": "assets/uninstaller-icon.ico",
      "shortcutName": "TaskLens",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "akibhaider",
        "repo": "TaskLens",
        "releaseType": "draft"
      }
    ],
    "icon": "assets/app-icon"
  }
}
